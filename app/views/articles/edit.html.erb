<h2>Edit exisiting article</h2>


<% if @article.errors.any? %>
<h2>The following errors prevented it from getting created</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg|%>
    <li> <%=msg%> </li>
  <% end %>
<% end %>
  </ul>


<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>


<% end %>


<%= link_to "Back to listing", articles_path  %>

